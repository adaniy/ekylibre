<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="hoeing" categories="soil_working" optional-actions="weeding, loosening">
    <parameters>
      <target name="land_parcel" filter="is land_parcel and has indicator shape">
        <attribute name="working_zone" default-value="PRODUCT.shape" if="PRODUCT?"/>
      </target>
      <doer name="driver" filter="is worker and can drive(equipment)" cardinality="*"/>
      <doer name="doer" filter="is worker" cardinality="*"/>
      <tool name="tractor" filter="is motorized_vehicle and (can tow(equipment) or can hoe)" cardinality="*"/>
      <tool name="hoe" filter="is equipment and can hoe" cardinality="*"/>
    </parameters>
  </procedure>
</procedures>
