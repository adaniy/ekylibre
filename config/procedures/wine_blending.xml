<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="wine_blending" categories="viticulture_transformation" actions="wine_blending">
    <parameters>
      <parameter name="tank" type="tool" filter="is tank and can store(wine)" default-actor="storage"/>
      <parameter name="wine" type="input" filter="is wine"/>
      <parameter name="adding_wine" type="input" filter="is wine"/>
      <parameter name="wine_blended" type="output" variety="wine" derivative-of="derivative-of: wine" filter="is wine" default-name="{{variant}} [{{birth_month_abbr}}. {{birth_year}}] ({{container}})" default-variant="production"/>
      <parameter name="wine_man" type="doer" filter="is worker and can move"/>
    </parameters>
  </procedure>
</procedures>
